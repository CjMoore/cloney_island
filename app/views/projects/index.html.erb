<div class="row project-jumbo">
  <div class="col s12 m12">
    <div class="icon-block">
      <h2 class="center orange-text">
        <i class=""></i>
      </h2>
      <h1 class="center has-single-shadow">Projects</h1>
      <p class="light flow-text center" id="tag-line">Browse our recent projects.</p>
    </div>
  </div>
</div>

<div class="contain">
  <div class="all-projs">
    <div class="row">
      <h5>Explore Our <span id="proj-count"><%= @projects.count %></span> Projects</h5>
      <% @projects.each do |project| %>
      <div class="col s3">
        <div class="card project-index">
          <div class="card-image">
            <img src="<%= project.image_url %>" class="proj-index-img">
            <span class="card-title"><%= project.name %></span>
          </div>
          <div class="card-content">
            <p> <%= project.description %> </p>
            <hb></hb>
            <div class="status-bar progress grey lighten-2">
              <div class="status-color determinate green lighten-2" style="width:<%= percent_funded(project.total, project.total_funds) %>%">
                <p id="status-size"></p>
              </div>
            </div>
          </div>
          <div class="card-action">
            <a href="/projects/<%= project.slug %>"> <%= project.name %></a>
            <% if project.check_if_funded %>
              <div id="welcome">Funded!</div>
            <% end %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    <div class="row">
      <ul class="paginate">
        <li class="active"><%= will_paginate @projects %></li>
      </ul>
    </div>
  </div>
</div>
